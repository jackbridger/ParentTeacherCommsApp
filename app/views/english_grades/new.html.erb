<head>
<link href='https://fonts.googleapis.com/css?family=Open+Sans&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
</head>

<% if user_signed_in? %>
<ul id="navbar">
    <li><%= link_to('Home', root_path)  %></li>
    <li><%= link_to('Settings', edit_user_registration_path)  %></li>
    <li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
</ul>
<% else %>
<ul id="navbar">
    <li><%= link_to('Home', root_path)  %></li>
    <li><%= link_to('Login', new_user_session_path)  %></li>
</ul>
<% end %>


<h1>New English Grade</h1>

<%= render 'form', english_grade: @english_grade %>

<%= link_to 'Back', choose_subjects_path(:student_id => @student.id, :teacher_id => current_user.id) %>



<div type = 'teacher_tips'>

<h3>Feedback Tip</h3>

<%= @tip.body %>

</div>

<h3>Specified shortcuts </h3>

<div id="wrapper">
  <span id = "Spelling">

  <% unless @generated_feedback_spelling_not_started.blank? %>
  <b>Not started</b>
      <button class="btn btn-success copy_to_clipboard" data-clipboard-text= "<%= @generated_feedback_spelling_not_started.auto_feedback %>" > <p> <%= @generated_feedback_spelling_not_started.auto_feedback %></p> </button>
  <% end %>

    <% unless @generated_feedback_spelling_working_towards.blank? %>
    <b>Working-towards</b>
      <button class="btn btn-success copy_to_clipboard" data-clipboard-text= "<%= @generated_feedback_spelling_working_towards.auto_feedback %>" > <p> <%= @generated_feedback_spelling_working_towards.auto_feedback %></p> </button>
  <% end %>

    <% unless @generated_feedback_spelling_working_at.blank? %>
    <b>Workng-at</b>
      <button class="btn btn-success copy_to_clipboard" data-clipboard-text= "<%= @generated_feedback_spelling_working_at.auto_feedback %>" > <p> <%= @generated_feedback_spelling_working_at.auto_feedback %></p> </button>
  <% end %>

    <% unless @generated_feedback_spelling_greater_depth.blank? %>
    <b>Greater-depth</b>
      <button class="btn btn-success copy_to_clipboard" data-clipboard-text= "<%= @generated_feedback_spelling_greater_depth.auto_feedback %>" > <p> <%= @generated_feedback_spelling_greater_depth.auto_feedback %></p> </button>
  <% end %>

  </span>


<span id = "Writing">Writing</span>
<span id = "Reading">Reading </span>

</div>

<h3>Select shortcuts </h3>

  <% (@all_shortcut_texts).each do |n| %>
   <button class="btn btn-success copy_to_clipboard" data-clipboard-text= "<%= n.body %>" > <p> <%= n.body %></p> </button>
  <% end %>

<script>
$('#english_grade_subcategory').change(function () {
  $('#Spelling, #Writing, #Reading').css("display","none");
  console.log($(this).val());
  var fieldToShow = $(this).val();
  $("#" + fieldToShow).css("display","inline-block");
});
$('#english_grade_performance_grade').change(function () {
  $('#Not-started, #Working-towards, #Working-at, #Greater-depth').css("display","none");
  console.log($(this).val());
  var fieldToShow = $(this).val();
  $("#" + fieldToShow).css("display","inline-block");
});
</script>


<script>
  jQuery.fn.copyToClipBoard = function() {
      var clip = new ZeroClipboard($(".copy_to_clipboard"));
  }
  $(function() {
    $('.copy_to_clipboard').copyToClipBoard();
  });
 </script>