<script>
$('#english_grade_subcategory').change(function () {
  $('#Spelling, #Writing, #Reading').css("display","none");
  console.log($(this).val());
  var fieldToShow = $(this).val();
  $("#" + fieldToShow).css("display","inline-block");
});
