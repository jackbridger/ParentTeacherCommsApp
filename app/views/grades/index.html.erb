<p id="notice"><%= notice %></p>

<h1>Grades</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Teacher</th>
      <th>Feedback</th>
      <th>Percentage score</th>
      <th>Grade type</th>
      <th>Grade letter</th>
      <th>Grade date</th>
      <th>Subject</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grades.each do |grade| %>
      <tr>
        <td><%= grade.student %></td>
        <td><%= grade.teacher %></td>
        <td><%= grade.feedback %></td>
        <td><%= grade.percentage_score %></td>
        <td><%= grade.grade_type %></td>
        <td><%= grade.grade_letter %></td>
        <td><%= grade.grade_date %></td>
        <td><%= grade.subject %></td>
        <td><%= link_to 'Show', grade %></td>
        <td><%= link_to 'Edit', edit_grade_path(grade) %></td>
        <td><%= link_to 'Destroy', grade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

