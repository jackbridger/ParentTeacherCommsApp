<p id="notice"><%= notice %></p>

<h1>Shortcut Texts</h1>

<table>
  <thead>
    <tr>
      <th>Teacher</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shortcut_texts.each do |shortcut_text| %>
      <tr>
        <td><%= shortcut_text.teacher %></td>
        <td><%= shortcut_text.body %></td>
        <td><%= link_to 'Show', shortcut_text %></td>
        <td><%= link_to 'Edit', edit_shortcut_text_path(shortcut_text) %></td>
        <td><%= link_to 'Destroy', shortcut_text, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

