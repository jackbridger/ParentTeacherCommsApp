<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :subject %>
    <%= f.select :subject, options_for_select(%w[English Maths]) %>
  </div>

  <div class="field">
    <%= f.label :task %>
    <%= f.text_area :task %>
  </div>

  <div class="field">
    <%= f.hidden_field :teacher_id %>
  </div>

  <div class="field">
    <%= f.label :due_date %>
    <%= f.date_select :due_date %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
