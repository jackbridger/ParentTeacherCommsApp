<% if user_signed_in? %>
  <li>
  <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
  </li>
        <li>
  <%= link_to('Settings', edit_user_registration_path)  %>
  </li>
<% else %>
  <li>
  <%= link_to('Login', new_user_session_path)  %>
  </li>
<% end %>


<h1> Welcome <%= current_user.first_name %> <%= current_user.last_name %> (Teacher) </h1>

<h2> Email: <%= current_user.email %> </h2>
<h2> ID: <%= current_user.id %> </h2>


<h3>List of students</h3>

<% @all_users.each do |student| %>
    <li>
        <%= link_to student.first_name, student %>
    </li>
<% end %>

<h3>Create feedback generator</h3>

<%= link_to('Create feedback generator', choose_feedback_generator_index_path(:teacher_id => @teacher.id))  %>

<h3>English auto feedbacks</h3>

<% @all_generated_feedback.each do |gen_feedback| %>
      <h5> Performance grade: <%= gen_feedback.performance_grade %> <h5>
      <p> Feedback: <%= gen_feedback.auto_feedback %> <p>
<% end %>